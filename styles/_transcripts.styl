.line
  margin-bottom: 2rem;
  border-radius: 2rem
  p
    margin-top 0
    padding-left calc(40px + 1rem)
  header
    display inline-grid
    grid-template-columns: auto auto auto
    align-items center
    justify-content: center
    grid-gap 1rem
    img
      width 40px
      border-radius 50%
      border: 2px solid hotpink
      &[src*="stolinski"]
        border-color green

.time
  background #f2f2f2
  font-size 12px
  padding: 2px 3.5px
  border-radius 2px
